{
  "name": "imagemin-simple",
  "version": "0.0.0",
  "main": "lib/index.js",
  "module": "es/index.js",
  "bin": {
    "imagemin-simple": "bin/index.js"
  },
  "sideEffects": false,
  "files": [
    "bin",
    "es",
    "lib"
  ],
  "scripts": {
    "build": "hsu-scripts build src",
    "test": "NODE_ENV='cjs' babel-node src/bin.js",
    "flow": "flow",
    "flow-coverage": "hsu-scripts flow --threshold 65",
    "eslint": "eslint ./",
    "format": "prettier --write '**/*.{js,json,md,css,yaml,yml}' '*.{js,json,md,css,yaml,yml}'",
    "changelog": "github-changes -o evenchange4 -r hsu-scripts -b master -f ./CHANGELOG.md --order-semver --use-commit-body"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "globby": "^8.0.1",
    "imagemin": "^6.0.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-pngquant": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@babel/node": "^7.2.0",
    "eslint": "^5.9.0",
    "flow-bin": "^0.87.0",
    "github-changes": "^1.1.2",
    "hsu-scripts": "^0.2.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "babel": {
    "presets": [
      "./node_modules/hsu-scripts/babel.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/hsu-scripts/eslint.js"
    ]
  },
  "lint-staged": {
    "*.{js,json,md,css,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
