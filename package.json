{
  "name": "imagemin-simple",
  "version": "1.0.0",
  "main": "lib/index.js",
  "module": "es/index.js",
  "bin": {
    "imagemin-simple": "bin/index.js"
  },
  "sideEffects": false,
  "files": [
    "bin",
    "es",
    "lib"
  ],
  "scripts": {
    "build": "hsu-scripts build src",
    "help": "NODE_ENV='cjs' babel-node src/bin.js",
    "test": "NODE_ENV='test' jest --coverage",
    "test:watch": "npm run test -- --watch",
    "test:base64": "NODE_ENV='cjs' babel-node src/bin.js base64 '**/*.{jpg,png,JPG,PNG}'",
    "flow": "flow",
    "flow-coverage": "hsu-scripts flow --threshold 78",
    "eslint": "eslint ./",
    "format": "prettier --write '**/*.{js,json,md,css,yaml,yml}' '*.{js,json,md,css,yaml,yml}'",
    "changelog": "conventional-changelog --infile ./CHANGELOG.md --same-file --release-count 0 --output-unreleased"
  },
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "chalk": "^2.4.1",
    "fs-extra": "^7.0.1",
    "globby": "^8.0.1",
    "imagemin": "^6.0.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-pngquant": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "ramda": "^0.26.1",
    "sharp": "^0.21.1",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/node": "7.2.2",
    "codecov": "3.1.0",
    "conventional-changelog-cli": "2.0.11",
    "eslint": "5.12.0",
    "flow-bin": "0.89.0",
    "hsu-scripts": "1.0.2",
    "husky": "1.3.1",
    "jest": "24.0.0-alpha.9",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.example.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/",
      "<rootDir>/es/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 41,
        "lines": 49,
        "statements": 49
      }
    }
  },
  "babel": {
    "presets": [
      "./node_modules/hsu-scripts/babel.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/hsu-scripts/eslint.js"
    ]
  },
  "lint-staged": {
    "*.{js,json,md,css,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "description": "Replace images with minified one.",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/evenchange4/imagemin-simple/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/evenchange4/imagemin-simple#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/evenchange4/imagemin-simple.git"
  }
}
