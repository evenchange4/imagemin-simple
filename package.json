{
  "name": "imagemin-simple",
  "version": "0.1.1",
  "main": "lib/index.js",
  "module": "es/index.js",
  "bin": {
    "imagemin-simple": "bin/index.js"
  },
  "sideEffects": false,
  "files": [
    "bin",
    "es",
    "lib"
  ],
  "scripts": {
    "build": "hsu-scripts build src",
    "help": "NODE_ENV='cjs' babel-node src/bin.js",
    "test": "NODE_ENV='test' jest --coverage",
    "test:watch": "npm run test -- --watch",
    "flow": "flow",
    "flow-coverage": "hsu-scripts flow --threshold 79",
    "eslint": "eslint ./",
    "format": "prettier --write '**/*.{js,json,md,css,yaml,yml}' '*.{js,json,md,css,yaml,yml}'",
    "changelog": "github-changes -o evenchange4 -r imagemin-simple -b master -f ./CHANGELOG.md --order-semver --use-commit-body"
  },
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "chalk": "^2.4.1",
    "globby": "^8.0.1",
    "imagemin": "^6.0.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-pngquant": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@babel/node": "7.2.0",
    "codecov": "3.1.0",
    "eslint": "5.10.0",
    "flow-bin": "0.89.0",
    "github-changes": "1.1.2",
    "hsu-scripts": "0.2.3",
    "husky": "1.2.0",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.example.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/",
      "<rootDir>/es/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "coverageThreshold": {
      "global": {
        "branches": 83,
        "functions": 50,
        "lines": 53,
        "statements": 54
      }
    }
  },
  "babel": {
    "presets": [
      "./node_modules/hsu-scripts/babel.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/hsu-scripts/eslint.js"
    ]
  },
  "lint-staged": {
    "*.{js,json,md,css,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "description": "Replace images with minified one.",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/evenchange4/imagemin-simple/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/evenchange4/imagemin-simple#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/evenchange4/imagemin-simple.git"
  }
}
